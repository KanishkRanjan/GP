rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - all authenticated users can read (for leaderboard)
    // but users can only write their own data
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Subjects collection - all authenticated users can read (for leaderboard)
    // but users can only create/edit their own subjects
    match /subjects/{subjectId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
